<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context="com.novoda.downloadmanager.demo.MainActivity">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/database_cloning_updates"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="@string/tap_to_begin_cloning" />

    <Spinner
      android:id="@+id/database_download_file_size"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

    <Button
      android:id="@+id/button_create_v1_db"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/create_v1_db" />

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/database_migration_updates"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="@string/tap_to_begin_migration" />

    <Button
      android:id="@+id/button_migrate"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/migrate" />

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/batch_1"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:lines="7"
      android:text="Hello World!" />

    <Button
      android:id="@+id/button_pause_downloading_1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/pause" />

    <Button
      android:id="@+id/button_resume_downloading_1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/resume" />

  </LinearLayout>


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/batch_2"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:lines="7"
      android:text="Hello World!" />

    <Button
      android:id="@+id/button_pause_downloading_2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/pause" />

    <Button
      android:id="@+id/button_resume_downloading_2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/resume" />

  </LinearLayout>

  <CheckBox
    android:id="@+id/check_wifi_only"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:checked="false"
    android:text="@string/download_only_over_wifi" />

  <Button
    android:id="@+id/button_start_downloading"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/start_downloading" />

  <Button
    android:id="@+id/button_delete_all"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/delete_all" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
      android:id="@+id/button_log_file_directory"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/log_file_directory"
      tools:ignore="ButtonStyle" />

    <Button
      android:id="@+id/button_log_download_file_status"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/log_download_file_status"
      tools:ignore="ButtonStyle" />

  </LinearLayout>

</LinearLayout>
